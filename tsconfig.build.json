{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "noEmit": false
  },
  "include": ["src/index.ts"]
}
